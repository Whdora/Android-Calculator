<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="4"><!--布局方式：7行4列的网格布局,水平布局,layout_columnWeight只适配android5.1以上--><!--平均分配android5.1-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:gravity="center"
            android:maxLines="1"
            android:text="2345王牌计算器"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/tVzhong"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_columnSpan="4"
            android:maxLines="1"
            android:layout_gravity="fill"
            android:gravity="right"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="40sp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/tVdown"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:maxLines="1"
            android:gravity="right"
            android:hint="0"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="40sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/bTgongneng"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:text="声音:开"
            android:textSize="40sp" />

        <Button
            android:id="@+id/clean"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:text="清除"
            android:textSize="40sp" />
    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="4"
        android:visibility="visible"
        android:id="@+id/root">

        <Button
            android:id="@+id/bT0"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="/"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT10"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT11"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="+"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT12"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT13"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT14"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="="
            android:textSize="30sp" />

        <Button
            android:id="@+id/bT15"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="*"
            android:textSize="30sp" />
    </GridLayout>
</LinearLayout>